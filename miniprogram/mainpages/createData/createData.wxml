<view>

    <view wx:if="{{type == 1 }}">

        <picker class="row" mode="date" value="{{date}}" start="{{nowDate}}" end="{{endDate}}" bindchange="carselectDate">
          <image class="icon" src="../../images/calendar.png"/>
          <Text class="text">{{date}}</Text>
        </picker>

        <picker class="row" mode="multiSelector" bindchange="carselectLocation" bindcolumnchange="To do later" value="{{mulloc}}" range="{{mulloc}}">
          <image class="icon" src="../../images/location.png"/>
          <Text class="text">{{cfrom}} - {{cto}}</Text>
        </picker>

        <radio-group name="radio-group" bindchange="carselectType">
          <image class="icon" src="../../images/project.png"/>
          <label><radio class="text" value="找车" checked="true"/>找车</label>
          <label><radio class="text" value="找人"/>找人</label>
        </radio-group>

          <view class="page-section">
            <view class="textarea-wrp">
              <textarea class="input" bindinput="inputDetails" placeholder="信息备注" value="{{details}}" auto-focus="true" style="height: 7em" />
            </view>
          </view>
        
        <view class="con-page-section">
          <input class="input" bindinput="inputContact" placeholder="联系方式" value="{{contact}}"/>
        </view>
        
        <button class="submit" type="primary" plain="false" bindtap="carSubmit">Submit</button>
    </view>


    <view wx:if="{{type == 2 && excPage == 1}}"> 
      <text>{{itemListText}}</text>
      <Text>物品:</Text>
      <input class="input" bindinput="inputGoods" placeholder="输入..." value="{{goods}}"/>
      <button bindtap="excaddItem">add Item</button>
      <button bindtap="excremoveItem">remove Item</button>

      <radio-group name="radio-group" bindchange="excselectType">
        <label><radio value="出售" checked="true"/>出售</label>
        <label><radio value="寻找"/>寻找</label>
      </radio-group>

      <text>{{excType}}</text>

      <input class="input" bindinput="inputDetails" placeholder="信息备注" value="{{details}}"/>

      <input class="input" bindinput="inputContact" placeholder="联系方式" value="{{contact}}"/>
    
    </view>

    <view class="container" wx:if="{{type == 2}}">
        <Text > 交换 page {{excPage}}</Text>
        <button type="primary" plain="false" bindtap="excNext">Next</button>
        <button type="primary" plain="false" bindtap="excSubmit">Submit</button>
    </view>



    <view wx:if="{{type == 3 && quePage == 1}}"> 
      <input class="input" bindinput="inputQuestion" value="{{question}}"/>
    </view>

    <view class="container" wx:if="{{type == 3}}">
        <Text > 问题 page {{quePage}}</Text>
        <button type="primary" plain="false" bindtap="queNext">Next</button>
        <button type="primary" plain="false" bindtap="queSubmit">Submit</button>
    </view>

</view>