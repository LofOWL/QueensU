<!--index.wxml-->
<view class="container">

  <loading hidden="{{finish}}">loading...</loading>
  <view class="itemTemplate" wx:for="{{carlist}}">
    <Text>{{item.date}} </Text>
    <Text>{{item.from}} -> </Text>
    <Text>{{item.to}} </Text>
    <Text>{{item.carType}}</Text>
  </view>

  <Text class="itemTemplate"> ---------------出行-------------- </Text>

  <view class="itemTemplate" wx:for="{{exclist}}">
    <Text>{{item.goods}} : </Text>
    <Text>{{item.excType}}</Text>
  </view>

  <Text class="itemTemplate"> ---------------交易-------------- </Text>

  <scroll-view class="itemTemplate" wx:for="{{quelist}}">
      <text class="questiontext">{{item.question}}</text>
      <text>\n*******</text>
  </scroll-view>

  <view bindtap='onCreateData'>
        <image class="createData" src="../../images/addButton.png"></image>
  </view>

</view>
