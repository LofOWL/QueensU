<view class="container">

  <!-- user information -->

  <view class="itemTemplate">
    <view class="row" data-statu="start" bindtap="editUserInformation">
      <image class="icon-car" src="../../images/con.png"/>
      <text class="item-car">{{userCon}}</text>
    </view>
  </view>

  <!-- change user information -->

  <view class="drawer_screen" bindtap="editUserInformation" data-statu="close" wx:if="{{showModalStatus}}"></view>

  <view class="drawer_box" wx:if="{{showModalStatus}}">
       <view class="page-section">
              <input class="input" bindinput="changeCon" placeholder="信息备注" value="{{userCon}}" auto-focus="true" style="height: 2em" />
          </view>
       <button class="submitButton" type="primary" plain="false" data-statu="submit" bindtap="editUserInformation">Submit</button>
  </view>


  <!-- car information car template -->

  <view wx:for="{{personalcarList}}">
    <view class="itemTemplate">

        <view class="row">
          <image class="icon-car" src="../../images/calendar.png"/>
          <text class='item-car'>{{item.createDate}}</text>
        </view>

        <view class="row">
              <image class="icon-car" src="../../images/location.png"/>
              <text class="item-car">{{item.from}} - {{item.to}}</text>
        </view>

        <!-- <view class="row">
              <image class="icon-car" src="../../images/mess.png"/>
              <view class="con-page-section">
                <text class="item-car-text">{{item.details}}</text>
              </view>
              
        </view>

         <view class="row">
              <image class="icon-car" src="../../images/con.png"/>
              <view class="con-page-section">
                <text class="item-car-text">{{item.contact}}</text>
              </view>
              
        </view> -->

        
        <button class="buttom" data-name="CarData" data-id="{{item._id}}" data-date="{{item.date}}" data-from="{{item.from}}" data-to="{{item.to}}" data-carType="{{item.carType}}" bindtap="onRemove" type="primary" plain="false">删除</button>

    </view>
  </view>


  <view wx:for="{{personalexcList}}">
        <view class="itemTemplate">

              <view class="row">
                <image class="icon-car" src="../../images/calendar.png"/>
                <text class='item-car'>{{item.createDate}}</text>
              </view>

              <view class="row">
                <image class="icon-car" src="../../images/goods.png"/>
                <text class='item-car'>{{item.goods}}</text>
               </view>

               <view class="row">
                      <image class="icon-car" src="../../images/mess.png"/>
                      <view class="con-page-section">
                        <text class="item-car-text">{{item.gooddetails}}</text>
                      </view>
                      
                </view>


              <button class="buttom" data-name="GoodsData" data-id="{{item._id}}" data-goods="{{item.goods}}" data-excType="{{item.excType}}" bindtap="onRemove" type="primary" plain="false">删除</button>

        </view>
  </view>

  <view wx:for="{{peronsalqueList}}">
    <view class="itemTemplate">
               <view class="row">
                      <image class="icon-car" src="../../images/mess.png"/>
                      <view class="con-page-section">
                        <text class="item-car-text">{{item.question}}</text>
                      </view>
                      
                </view>


              <button class="buttom" data-name="QueData" data-id="{{item._id}}" data-goods="{{item.goods}}" data-excType="{{item.excType}}" bindtap="onRemove" type="primary" plain="false">删除</button>
    </view>
  </view>


</view>
